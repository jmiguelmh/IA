                <set var="iterador"><srai> ITERATE <get var="lista_horas"/></srai></set>

                <condition var="iterador">
                    <li value="$">
                        <set var="resultado"> FALSE </set>
                    </li>
                    <li value="LIBRE">
                        <set var="resultado"> TRUE </set>
                    </li>
                    <li>
                        <set var="iterador"><srai> NEXT </srai></set>
                        <loop/>
                    </li>
                </condition>
            </think>
            <get var="resultado"/>
        </template>
    </category>

